<h1>Create New Article </h1>


<%= form_for @article do |f| %>
  <%= f.label    :title %>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label    :body %>
  <br>
  <br>
  <%= f.text_area :body, size: "60x12" %>
  <br>
  <br>
  <%= f.label    :author %>
  <%= f.text_field :author %>
  <%= f.hidden_field :magazine_id, :value => @magazine.id %>

  <br><br>
  <%= f.submit "Create" %>
<% end %>
